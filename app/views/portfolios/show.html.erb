<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%', height: '100%' %>
    </div>

    <div class="col-md-5">
      <div class="row" >
        <h1><%= @portfolio_item.title %></h1>

        <% if logged_in?(:site_admin) %>
          <div>
            <%= link_to 'Edit Project', edit_portfolio_path(@portfolio_item), class: 'btn btn-outline-warning btn-sm' %>
          </div>
        <% end %>
      </div>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
